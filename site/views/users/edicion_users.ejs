<!DOCTYPE html>
<html lang="en">

<!--Head-->
<%- include('../partials/head.ejs', {title: "Baggu: Edit"}) %>

<body>

    <!--Header-->
    <%- include('../partials/header.ejs') %>

    <main class="main_edicion_users">

        <h3 class="title_edicion_users">Editar Producto</h3>

        <form action="/users/<%= data %>?_method=PUT" method="POST" class="form_edit_users">

            <label for="myfile">    Avatar:     <input type="file" id="myfile" name="myfile" >                                                   </label>
            
            <label for="id">        ID:         <input type="text"      name="id"       id="id"         value="<%= users[data].id %>">          </label>

            <label for="user">      Usuario     <input type="text"      name="user"     id="user"       value="<%= users[data].user %>">        </label>

            <label for="name">      Nombre:     <input type="text"      name="name"     id="name"       value="<%= users[data].name %>">        </label>

            <label for="surname">   Apellido:   <input type="text"      name="surname"  id="surname"    value="<%= users[data].surname %>">     </label>

            <label for="email">     Email:      <input type="email"     name="email"    id="email"      value="<%= users[data].email %>">       </label>

            <label for="password">  Contrase√±a: <input type="password"  name="password" id="password"   value="<%= users[data].password %>">    </label>

            <label for="category">  Categoria:  <input type="text"      name="category" id="category"   value="<%= users[data].catogory %>">    </label>

            <button type="submit" class="button_edicion_users">  Enviar  </button>
        </form>

    </main>
    
    <!--Footer-->
	<%- include('../partials/footer.ejs') %>

</body>

</html>
<!DOCTYPE html>
<html lang="es">
	
	<!--Head-->
	<%- include('../partials/head.ejs', {title: "Baggu: Register"}) %>

    <body>
		
		<!--Header-->
		<%- include('../partials/header/header.ejs') %>		
		<main class="main_register">

			<!--Form Register-->
			<form class="formulario_register" enctype="multipart/form-data" action="/users/register" method="POST"> 
				
					<div class="titulo_register">
						<h1>Registrarse</h1>
					</div>

					<ul class="ul_register">
						<li>
							<label for="avatar">Select a file:</label>
							<input type="file" id="avatar" name="avatar">
						</li>
						<li>
							<label for="name">
								<span>Nombre</span>
								<input type="text" name="name" id="name">
							</label></li>
						<li>
							<label for="surname">
								<span>Surname</span>
								<input type="text" name="surname" id="surname">
							</label></li>
						<li>
							<label for="username">
								<span>User</span>
								<input type="text" name="username" id="usuario">
							</label>
						</li>
						<li>
							<label for="email">
								<span>Email</span>
								<input type="email" name="email" id="email" autocomplete="off">
							</label>
						</li>
						<li>
							<label for="password">
								<span>Password</span>
								<input type="password" id="password" name="password">
							</label>
						</li>
						
					</ul>

				<div class="submit_register">
					<button type="submit">Submit</button>
				</div>
			</form>
			
		</main>
		


		<!--Footer-->
        <%- include('../partials/footer.ejs') %>
    	

    </body>

</html>
<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs', {title: "Baggu: Register"}) %>

<body>
    
    <!--Header-->
    <%- include('../partials/header.ejs') %>

    <main>

        <!--formulario-->
        <form class="register_form" method="POST" action="/users/register">
            
            <h1 class="register_option">Registrarse</h1>
            
            <label class="register_option" for="id">
                <span> ID:</span>
                <input type="text" name="id" id="id">
            </label>

            <label class="register_option" for="avatar">
                <span> Avatar:</span>
                <input type="text" name="avatar" id="avatar">
            </label>

            <label class="register_option" for="user">
                <span> Usuario:</span>
                <input type="text" name="user" id="user">
            </label>

            <label class="register_option" for="surname">
                <span> Apellido:</span>
                <input type="text" name="surname" id="surname">
            </label>

            <label class="register_option" for="email">
                <span> Email:</span>
                <input type="email" name="email" id="email">
            </label>

            <label class="register_option" for="password">
                <span> Contrase√±a:</span>
                <input type="password" name="password" id="password">
            </label>

            <label class="register_option" for="category">
                <select name="category" id="category">
                <option value="1">Comprador</option>
                <option value="2">Vendedor</option>
                <option value="3">Dios</option>
                </select>

            </label>
            <button type="submit">Enviar</button>
        
        </form>
    </main>
    
    <!--footer-->
    <%- include('../partials/footer.ejs') %>
</body>
</html>
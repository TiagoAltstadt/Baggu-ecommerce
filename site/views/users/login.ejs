<!DOCTYPE html>
<html lang="es">

<!--Head-->
<%- include('../partials/head.ejs', {title: "Baggu: Login"}) %>
<script src="/js/validator.min.js"></script> <!--Scrip de Express Validator-->
<script src="/js/validationLogin.js"></script>	

<body>
	
	<!--Header-->
	<%- include('../partials/header/header.ejs') %>
	<!--PARA MARCAR SI HAY ERRORES-->
	<% if ( locals.errors && errors.length > 0){ %>
	<p style="color: red">ERROR</p>
	<ul>
		<% for (let i=0; i<errors.length; i++){ %> <!--Por que estan la lista de errores aca y abajo de los campos-->
		<li>
			<%= errors[i].msg %>
		</li>
		<%	} %>
	</ul>
	<%}%>

        <main class="cuentaLogin">

			<!--Titulo-->
			<div class="tituloLogin">	<i class="fas fa-user"></i><h1>Login</h1>	</div>

			<!--Formulario Login-->
			<form action="/users/login" method="POST" class="campoLogin" id="formLogin">
				
				<div class="subCampoLogin">
					<label for="email"> Email:</label>
					<input class="emailPlace" type="text" id="email" name="email" placeholder="Nombre">
					<p class="feedback"></p> <!--Feedback para mensaje del Front-->
					<p class="feedback <%= locals.errors && errors.email ? 'is-danger' : '' %>"> 
						<%= locals.errors && errors.email ? errors.email.msg : '' %></p> <!--Feedback para mensaje del Back-->
					
				</div>
				<div class="subCampoLogin">
					<label for="password">Contraseña:</label>
					<input type="password" id="password" name="password" placeholder="Contraseña">
					<p class="feedback"></p> <!--Feedback para mensaje del Front-->
					<p class="feedback <%= locals.errors && errors.password ? 'is-danger' : '' %>"> 
						<%= locals.errors && errors.password ? errors.password.msg : '' %></p> <!--Feedback para mensaje del Back-->
					
				</div>


				<button type="submit">Login</button>

			</form>
			
			

		</main>

		<!--Footer-->
		<%- include('../partials/footer.ejs') %>

</body>

</html>
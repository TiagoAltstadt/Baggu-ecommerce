<section class="header_container">

    <!--    Script  -->
    <script>
        function sidebar_open() {
            document.getElementById("mySidebar").style.display = "block";
        }

        function sidebar_close() {
            document.getElementById("mySidebar").style.display = "none";
        }

        function profile() {
            if (document.getElementById("profile").style.display == "block") {
                document.getElementById("profile").style.display = "none";
            } else {
                document.getElementById("profile").style.display = "block";
            }
        }
    </script>

    <!--    Header  -->

    <div class="header_subcontainer1">
        <!--Menu-->
        <button class="header_button" onclick="sidebar_open()">☰</button>
        <!--Logo-->
        <div class="header_logo">
            <a href="/"><img src="/img/logos/logoLandscape.png" alt="LOGO" id="header_logo"></a>
        </div>
        <!--Profile pic-->
        <div class="header_profile">
            <% if (locals.loggedUser){ %>
                <img src="/fileUsers/<%= locals.loggedUser.avatar %>" alt="LogoL" id="header_profile" onclick="profile()" id="profile">
                <% } else { %>
                    <a href="/users/login"><img src="/img/user_default/default.png" alt="LogoN" id="header_profile"></a>
                    <% } %>
        </div>
    </div>
    <div class="header_subcontainer2">
        <!--Search-->
        <div class="header_search">
            <form action="/products/search" method="GET" class="header_form">
                <input type="text" name="header_search" placeholder="Buscar" class="header_searchBox">
            </form>
        </div>
    </div>


    <!--    Hamburguer Pop-up   -->

    <section class="header_burguer_popUp" style="display:none" id="mySidebar">
        <button class="header_button" onclick="sidebar_close()">☰</button>
        <ul>
            <a href="/">
                <li>Home</li>
            </a>
            <a href="/products">
                <li>Descartables</li>
            </a>
            <a href="/products">
                <li>Papeleria</li>
            </a>
            <a href="/products">
                <li>Higiene</li>
            </a>
            <a href="/acerca-de">
                <li>Acerca de</li>
            </a>
            <a href="/contact">
                <li>Contacto</li>
            </a>
    </section>


    <!--    User Pop-up -->

    <% if (locals.loggedUser){ %>
        <section class="header_popUp" id="profile">
            <!--Image-->
            <img src="/fileUsers/<%= locals.loggedUser.avatar %>" alt="LogoL" class="profile_popUpAvatar">

            <!--Main Info-->
            <div class="profile_mainInfo">
                <p class=" profile_name">
                    <%= locals.loggedUser.name %>
                </p>
            </div>

            <!--Options-->
            <ul>
                <a href="/users/<%= locals.loggedUser.id %>">
                    <li class="option">Perfil</li>
                </a>
                <a href="/users/<%= locals.loggedUser.id %>/edit">
                    <li class="option">Editar perfil</li>
                </a>

                <a href="https://weirdorconfusing.com/">
                    <li class="option">Boton magico</li>
                </a>

            </ul>
            <form action="/users/logout?_method=PUT" method="POST"><button type="submit">Cerrar Sesion</button></form>

        </section>
        <% } %>



</section>